<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.dsc.muhghazaliakbar.tugas1dsc.MainActivity">

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="Twitter logo"
        android:src="@drawable/ic_twitter_logo"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/head_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Umar fadil"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/main_logo"
        android:layout_centerHorizontal="true"
        android:textSize="17dp"/>
    <TextView
        android:id="@+id/head_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chief Executive Officer"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/head_name"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:paddingTop="7dp"/>

    <RelativeLayout
        android:id="@+id/contact_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/head_job"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp">
        <ImageView
            android:id="@+id/contact_phone_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_phone"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/contact_phone_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+62 8511 037 4321"
            android:textColor="@color/colorPrimaryDark"
            android:layout_toRightOf="@id/contact_phone_icon"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contact_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/contact_phone"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/contact_email_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_email"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/contact_email_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="umarfadil.skom@gmail.com"
            android:textColor="@color/colorPrimaryDark"
            android:layout_toRightOf="@id/contact_email_icon"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/footer_project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aluf Studio Project"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerVertical="true"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_above="@+id/footer_project_address"/>
    <TextView
        android:id="@+id/footer_project_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jl. Klampis Anom Blok VIII, No. F150, Surabaya"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerVertical="true"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"/>
</RelativeLayout>
